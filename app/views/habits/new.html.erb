<div class="index-wrap">
  <header>
    <p class="header animated zoomIn"> <%= link_to "<< ", habits_path, class: "btn-header" %>Back to Habits </p>
  </header>

  <h1 class="animated slideInLeft">New Habit</h1>
  <h1><%= render "form" %></h1>

  <footer>
    <div class="footer">
      <% flash.each do |type, message| %>
      <p class="flash <%= type %> small"><%= message %> </p>
      <% end %>
    </div>
    <div class="footer">
      <% if !current_user %>
      <%= link_to "Sign up", new_user_registration_path %>
      <%= link_to "Sign in", new_user_session_path %>
      <% else %>
      <%= current_user.email %>
      <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "small" %>
      <% end %>
    </div>
  </footer>

</div>
