<div class="index-wrap">
  <header>
    <div>
    <p class="header animated zoomIn"> <%= link_to "<< ", habit_path(@habit), class: "btn-header" %>Back to Habit </p>
    </div>
    <div>
      <div class="footer">
        <% if !current_user %>
        <%= link_to "Sign up", new_user_registration_path %>
        <%= link_to "Sign in", new_user_session_path %>
        <% else %>
        <%= current_user.email %>
        <%= link_to "( Sign out )", destroy_user_session_path, :method => :delete, class: "small" %>
        <% end %>
      </div>
    </div>
  </header>
<section class="new">
  <h1 class="animated rubberBand"> New Occurrence </h1>
  <h1> <%= render "form" %> </h1>
</section >
</div>
